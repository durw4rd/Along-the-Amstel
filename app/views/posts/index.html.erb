<h1>Alongside the Amstel</h1>
<p>
  <button><%= link_to 'Add Image', new_post_path %></button>
</p>

<% @posts.each do |post| %>
  <div class="index">
    <a href="<%= post_path post %>">
      <%= image_tag(post.image.thumbnail.url, class: "thumbnail inline") %>
      <h2><%= post.title %></h2>
      <h3><%= post.subheader %></h3>
    </a>
    <div>
      <button><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </div>
  </div>
<% end %>

<br>
