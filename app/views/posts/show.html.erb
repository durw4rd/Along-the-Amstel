<div class="container">
  <%= image_tag @post.image_url.to_s, class: 'bg' %>

  <div class="post_content">
    <h1><%= @post.title %></h1>
    <h3><%= @post.subheader %></h3>
    <p><%= @post.content %></p>

    <button><%= link_to 'Edit', edit_post_path( @post ) %></button> |
    <button><%= link_to 'Back', posts_path %></button> |
    <button><%= link_to 'Delete Post', post_path( @post ), method: :delete %></button>
  </div>
</div>
