<%= image_tag @post.image_url.to_s, class: 'bg' %>

<div class="post_content">
  <h1><%= @post.title %></h1>
  <h3><%= @post.subheader %></h3>
  <p><%= @post.content %></p>

  <%= link_to 'Edit', edit_post_path( @post ) %> |
  <%= link_to 'Back', posts_path %> |
  <%= link_to 'Delete Post', post_path( @post ), method: :delete %>
</div>
